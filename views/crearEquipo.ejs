<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Crear</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel='stylesheet' href='/stylesheets/formCrearEquipo.css'/>
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    </head>
    <body style="overflow-y: hidden;">
        <!-- barra de navegacion -->
        <div class="topnav">
          <a href="/logout">Salir</a>
          <a  href="/reportes">Reportes</a>
          <a href="/consultas">Consulta</a>
          <a class="active" href="/inicio">Inicio</a>
        </div>
          <!-- contenedor de cajas -->
          <form action="/crearEq" method="POST">
          <div  style="position: absolute; left: 250px;">
          <h3>Crear Equipo</h3>
          <img src="/images/logo_forms.png"style="position: absolute; right:180px; bottom:5px;" width="45" height="45">
          </div>
          
          <div class="contenedor-cajas">
            
            <div><p id="texto1">Tipo</p>
              <select style="width: 100px; height:30px; position:absolute; left:120px; top:50px" name="tipo">
                <option value="LAPTOP">LAPTOP</option>
                <option value="DESKTOP">DESKTOP</option>
                <option value="WORKSTATION">WORKSTATION</option>
                <option value="MONITOR">MONITOR</option>
                <option value="WACOM">WACOM</option>
              </select>
            </div>
            <div><p id="texto2">Marca</p>
              <select style="width: 100px; height:30px; position:absolute; left:120px; top:50px" name="marca">
                <option value="ACER">ACER</option>
                <option value="APPLE">APPLE</option>
                <option value="ASUS">ASUS</option>
                <option value="COMPAQ">COMPAQ</option>
                <option value="DELL">DELL</option>
                <option value="HP">HP</option>
                <option value="LENOVO">LENOVO</option>
                <option value="TOSHIBA">TOSHIBA</option>
         
              </select>
            </div>
            <div><p id="texto3">Modelo</p>
              <select style="width: 100px; height:30px; position:absolute; left:120px; top:50px" name="modelo">
                <% modelos.forEach(modelo =>{ %>
                <option value="<%= modelo.modelo %>"><%= modelo.modelo %></option>
                <% }) %>
              </select>
            </div>
            <div><p id="texto4">Serial</p><input class="input4" type="text"  name="serial" ></div>
            <div><p id="texto5">Placa</p><input class="input5" type="text"  name="id_placa" ></div>
            <div><p id="texto6">Estado</p>
              <select style="width: 100px; height:30px; position:absolute; left:120px; top:50px" name="estado">
                <option value="Almacen">Almacen</option>
                <option value="Asignado">Asignado</option>
                <option value="Bajas">Bajas</option>
                <option value="Bodega">Bodega</option>
                <option value="Medellin">Medellin</option>
                <option value="ROBADO">ROBADO</option>
                <option value="SOTANO">SOTANO</option>
              </select>
            </div>
            <div><p id="texto7">Plataforma</p>
              <select style="width: 100px; height:30px; position:absolute; left:120px; top:50px" name="plataforma">
                <option value="Windows">Windows</option>
                <option value="Linux">Linux</option>
                <option value="MAC_OS">MAC_OS</option>
         
              </select>
            </div>
            <div><p id="texto8">Sistema Operativo</p>
              <select style="width: 100px; height:30px; position:absolute; left:120px; top:50px" name="sistema">
                <% sistemas.forEach(sistema =>{ %>
                <option value="<%= sistema.sistema %>"><%= sistema.sistema %></option>
                <% }) %>
              </select>
            </div>
            <div><p id="texto9">Monitor1</p><input class="input9" type="text"  name="monitor1" ></div>
            <div><p id="texto10">Monitor2</p><input class="input10" type="text"  name="monitor2" ></div>
            <div><p id="texto11">Ag.Alista</p><input class="input11" type="text"  name="ag_alista" ></div>
            <div><p id="texto12">Ag.Retira</p><input class="input12" type="text"  name="ag_retira" ></div>
            <div><p id="texto13">Mouse</p><input class="input13" type="text"  name="mouse" ></div>
            <div><p id="texto14">Diadema</p><input class="input14" type="text"  name="diadema" ></div>
            <div><p id="texto15">Adap.Video</p><input class="input15" type="text"  name="video" ></div>
            <div><p id="texto16">Base.Ref</p><input class="input16" type="text"  name="refrigerante" ></div>
            <div><p id="texto17">Base monitor</p><input class="input17" type="text"  name="monitor" ></div>
            <div><p id="texto18">DD.Externo</p><input class="input18" type="text"  name="disco" ></div>
            <div><p id="texto19">Wacom</p><input class="input19" type="text"  name="Wacom" ></div>
            <div><p id="texto20">Tablet</p><input class="input20" type="text"  name="Tablet" ></div>
            <div><p id="texto21">Adicionales</p><input class="input21" type="text"  name="adicionales" ></div>
            <div><p id="texto22">Validacion.Doc</p><input class="input22" type="text"  name="documentos" ></div>
           

           

          </div>

          <button id="btn" type="submit">Agregar Registro</button>
        </form>


    </body>
</html>
